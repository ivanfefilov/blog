<h2>
  <%= link_to post.title, post_path(post) %>
</h2>
<% unless post.user == current_user %>
  <p class="lead">
    by <%= post.user.name %>
  </p>
<% end %>
<p>Posted on <%= l(post.created_at, :format => :long) %></p>
<hr>
<p><%= truncate(post.body, :length => 100) %></p>
<hr>
<% if post.user == current_user %>
  <%= link_to(t('app.forms.edit'), edit_post_path(post), :class => "btn btn-primary") %>
<% else %>
  <%= link_to(t('app.user.posts.view_more'), post_path(post), :class => "btn btn-primary") %>
<% end %>
