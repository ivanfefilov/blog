<div class="col-md-8">
  <h1 class="page-header">
    <%= @post.title %>
  </h1>
  <p class="lead">
    by <%= @post.user.name %>
  </p>
  <p>Posted on <%= l(@post.created_at, :format => :long) %></p>
  <hr>
  <p><%= raw @post.body %></p>
  <hr>
  <div id="comment-form">
    <%= render :partial => "shared/comment_form", :locals => {:post => @post} %>
  </div>
  <div id="comments">
    <%= link_to_remote t('app.comments.show'), :url => comments_post_path(@post), :method => :get %>
  </div>
</div>
